<!DOCTYPE html>
<html lang="en">
  <head>
   {{>head}}
  </head>
  <body>
    
	<!--nav-->
    {{>nav}}
    <section class="home-slider js-fullheight owl-carousel bg-white">
      <div class="slider-item js-fullheight">
      	<div class="overlay"></div>
        <div class="container-fluid p-0">
          <div class="row d-md-flex no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
          	<div class="one-third order-md-last img js-fullheight" style="background-image:url({{{cdn}}}{{page.hero.bg_image}});">
          		<div class="overlay"></div>
          	</div>
	          <div class="one-forth d-flex js-fullheight align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
	          	<div class="text mt-md-5">
		            <h1 class="mb-4" dir="rtl" align="Center">{{{page.hero.header}}}</h1>
		            <p dir="rtl" align="center">{{page.hero.subtext}}</p>
	            </div>
	          </div>
        	</div>
        </div>
      </div>


    </section>
	

		<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
			<div class="container">
				<div class="row no-gutters">
					<div class="col-sm-5 img img-2 d-flex align-items-center justify-content-center justify-content-md-end" style="background-image: url({{{cdn}}}{{page.about.bg_image}}); position: relative"></div>
					<div class="col-sm-7 wrap-about py-5 ftco-animate">
	          <div class="heading-section mt-5 mb-4">
	          	<div class="pl-lg-5 ml-md-5">
		          	<p dir="rtl" align="right">درباره ما</p>
		            <h2 class="mb-4" dir="rtl" align="right">{{page.about.header}}</h2>
	            </div>
	          </div>
	          <div class="pl-lg-5 ml-md-5">
							<p dir="rtl" align="right">{{page.about.subtext}}</p>
							<h3 class="mt-5" dir="rtl" align="right">زنبورستان رویال</h3>
							<div class="thumb my-4 d-flex">
					{{#page.about.images}}
	            	<a class="thumb-menu pr-md-4 text-center">
	            		<div class="img" style="background-image: url({{{cdn}}}{{image}});"></div>
	            
	            	</a>
					{{/page.about.images}}

	            </div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url({{{cdn}}}/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    	<div class="container">
    		<div class="row d-md-flex align-items-center justify-content-center">
    			<div class="col-lg-10">
    				<div class="row d-md-flex align-items-center">
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="18">0</strong>
		                <span>سال تجربه</span>
		              </div>
		            </div>
		          </div>
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="20000">0</strong>
		                <span>کیلوگرم عسل تولیدی</span>
		              </div>
		            </div>
		          </div>
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="564">0</strong>
		                <span>کندوی فعال</span>
		              </div>
		            </div>
		          </div>
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="30">0</strong>
		                <span>شغل ایجاد شده</span>
		              </div>
		            </div>
		          </div>
	          </div>
          </div>
        </div>
    	</div>
    </section>


    <section class="ftco-section">
    	<div class="container" dir="rtl" align="right">
    		<div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section ftco-animate">
  
            <h2 class="mb-4">محصولات</h2>
          </div>
        </div>
        <div class="row">
        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3 dir="rtl" align="center">عسل</h3>
        		</div>
        	  {{#asal}}	
            <div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
            </div>
        	  {{/asal}}	
        	
          </div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>ژل</h3>
        		</div>
            {{#jelly}}
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
            </div>
            {{/jelly}}
        	</div>
          {{#garde}}
        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>گرده گل</h3>
        		</div>
        		<div class="menus d-flex ftco-animate">
              <div class="menu-img img" style="background-image: url({{image}});"></div>
              <div class="text">
              	<div class="d-flex">
	                <div class="one-half">
	                  <h3>{{name}}</h3>
	                </div>
	                <div class="one-forth">
	                  <span class="price">${{price}}</span>
	                </div>
	              </div>
	              <p><span>{{description}}</span></p>
              </div>
              {{/garde}}
            </div>
        	</div>

        	<!--  -->
        </div>
    	</div>

    </section>
			

		<section class="ftco-section ftco-no-pt ftco-no-pb">
			<div class="container">
				<div class="row d-flex">
          <div class="col-md-5 ftco-animate img img-2" style="background-image: url({{{cdn}}}/images/bg_6.jpg);"></div>
          <div class="col-md-7 ftco-animate makereservation p-4 p-md-5">
          	<div class="heading-section ftco-animate mb-5">
	            <h2 class="mb-4" dir="rtl" align="right">سفارش دهید</h2>
	          </div>
            <form action="/order" method="post">
              <div class="row" dir="rtl" align="right">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">نام</label>
                    <input id="order-name" name="name" type="text" class="form-control" placeholder="نام و نام خوانوادگی سفارش دهنده">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">ایمیل</label>
                    <input id="order-email" name="email" type="text" class="form-control" placeholder="ایمیل سفارش دهنده">
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="">سفارش</label>
                    <textarea id="order-description" name="order" style="background-color:#ffffffa !important" class="form-control" rows="8" placeholder="سفارشتان را اینجا ثبت کنید"></textarea>
                  </div>
                </div>
                </div>
                <div class="col-md-12 mt-3">
                  <div id = "btn-order-container" class="form-group">
                    <input id="btn-order" type="submit" value="ثبت سفارش" class="btn btn-primary py-3 px-5">
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
			</div>
		</section>
  {{>footer}}  
  {{>scripts}}


  <script>
    (function(){
      console.log('HELLO, test click MUstafa')
      $('#btn-order').click(function(event){
        if (event)
          event.preventDefault()

        var order = {
          name: $('#order-name').val(),
          email: $('#order-email').val(),
          order: $('#order-description').val() 
        }

        console.log('PLACE ORDER!'+ JSON.stringify(order))
        $.ajax({
          url:'/order',
          method:'post',
          data: order,
          success: function(resp){
            console.log('ORDER RECEIVED: '+JSON.stringify(resp))
            $('#btn-order-container').html('<h3>از شما متشکریم، به زودی همکاران ما با شما تماس خواهند گرفت</h3>')
          },
          error:function(resp){

          }
        })
      })
    })()
  </script>
  </body>
</html>